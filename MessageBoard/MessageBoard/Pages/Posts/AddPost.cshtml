@page "{postId:int?}"
@model MessageBoard.Pages.Posts.AddPostModel
@{
    ViewData["Title"] = "AddPost";
}

<h2>AddPost</h2>

<form method="post">
    <div>ID: @Model.Post.Id</div>
    <div class="form-group">
        <label asp-for="Post.Message">Post a Message</label>
        <textarea asp-for="Post.Message" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Post.Message"></span>
        
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
</form>